<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TEER</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("TEER", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>



            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="font-weight:bold;">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Train Information<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("View Train Information", "Index", "Home")</li>
                            <li>@Html.ActionLink("Edit Train Information", "EditTrainInformation", "Home")</li>
                            <li>@Html.ActionLink("View Train Details", "ViewTrainDetails", "Home")</li>
                            <li>@Html.ActionLink("Train Details Search", "TrainDetailsSearch", "Home")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Documents<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("View General Order", "Index", "Home")</li>
                            <li>@Html.ActionLink("View Operation Notice", "FindPTData", "Home")</li>
                            <li>@Html.ActionLink("View General Notice Number", "FindPTData", "Home")</li>
                            <li>@Html.ActionLink("View Special Schedule", "FindPTData", "Home")</li>
                            <li>@Html.ActionLink("View Crew Management System Book", "FindPTData", "Home")</li>
                            <li>@Html.ActionLink("View Bulletin", "FindPTData", "Home")</li>
                            <li>@Html.ActionLink("Crew Assignment", "FindPTData", "Home")</li>
                        </ul>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Computer Information<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("View Computer Information", "FindPTData", "Home")</li>
                            <li>@Html.ActionLink("View Location Details", "FindPTData", "Home")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Reports<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Daily Report", "FindPTData", "Home")</li>
                            <li>@Html.ActionLink("Weekly Report", "FindPTData", "Home")</li>
                            <li>@Html.ActionLink("Location Wise Report", "FindPTData", "Home")</li>
                            <li>@Html.ActionLink("Employee Wise Report", "FindPTData", "Home")</li>
                            <li>@Html.ActionLink("Custom Report", "FindPTData", "Home")</li>
                        </ul>
                    </li>
                    @*<li>@Html.ActionLink("Main 3", "Index", "Doctors")</li>
                    <li>@Html.ActionLink("Main 4", "Index", "Home")</li>*@
                </ul>
                @*<ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Train Info", "TrainInfo", "Home")</li>
                    <li>@Html.ActionLink("Documents", "Documents", "Home")</li>
                    <li>@Html.ActionLink("Computer Information", "ComputerInformation", "Home")</li>
                    <li>@Html.ActionLink("Reports", "Reports", "Home")</li>
                </ul>*@
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - TEER</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
